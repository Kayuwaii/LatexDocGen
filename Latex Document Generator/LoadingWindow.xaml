        <ProgressBar x:Name="Bar" HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" Width="300" Margin="0,120,0,0" />
        <Image Height="100" Margin="235,100,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Source="logo.png" Stretch="UniformToFill" />
    </Grid>
</Window>